<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bảng xếp hạng Section -->
<!--    <include-->
<!--        android:id="@+id/header"-->
<!--        layout="@layout/header"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content" />-->

    <!-- Background cố định -->
    <ImageView
        android:id="@+id/fixed_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/title_part"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PART 1: PHOTOGRAPHS"

        android:fontFamily="@font/afacad_bold"
        android:textSize="20sp"

        android:paddingHorizontal="25dp"
        android:layout_marginTop="25dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fixed_background" />

    <TextView
        android:id="@+id/content_part"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="TextView"
        android:fontFamily="@font/afacad_regular"
        android:textSize="16sp"

        android:paddingTop="12dp"
        android:paddingHorizontal="25dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_part" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_login"
        android:layout_width="250dp"
        android:layout_height="42dp"

        android:background="@drawable/rounded_button"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"

        app:layout_constraintVertical_bias="0.96"

        app:layout_constraintBottom_toBottomOf="@+id/fixed_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/afacad_bold"

            android:text="Let's Start"
            android:textColor="@color/white"
            android:textSize="16sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>