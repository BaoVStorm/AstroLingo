<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/transparent"
    android:clickable="false"
    android:focusable="false"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second_card"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="310dp"
            android:layout_height="600dp"

            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"

                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toBottomOf="@+id/second_icon_mark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/second_icon_mark">

                    <TextView
                        android:id="@+id/second_currentPage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/afacad_bold"

                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/main_color_purple"
                        android:textSize="22sp"

                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/second_spe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:fontFamily="@font/afacad_bold"

                        android:gravity="center"
                        android:text="/"
                        android:textColor="@color/main_color_purple"
                        android:textSize="22sp"

                        app:layout_constraintStart_toEndOf="@+id/second_currentPage" />

                    <TextView
                        android:id="@+id/second_fullPage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:fontFamily="@font/afacad_bold"

                        android:gravity="center"
                        android:text="36"
                        android:textColor="@color/main_color_purple"
                        android:textSize="22sp"

                        app:layout_constraintStart_toEndOf="@+id/second_spe" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/second_icon_mark"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_assets_star_uncheck"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/second_icon_loud"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_asset_loud1"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/second_scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="50dp"

                    android:fillViewport="true"

                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:clickable="false"
                        android:focusable="false"
                        android:longClickable="false"
                        >

                        <TextView
                            android:id="@+id/second_word"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/afacad_medium"

                            android:gravity="center"
                            android:text="Determine"
                            android:textColor="@color/black_light"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/second_word_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/afacad_bold"

                            android:gravity="center"
                            android:text="Định nghĩa:"
                            android:textColor="@color/main_color_purple_dark"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/second_word" />

                        <TextView
                            android:id="@+id/second_word_meaning_english"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="0dp"

                            android:fontFamily="@font/afacad_medium"
                            android:text="Định nghĩa tiếng anh"
                            android:textColor="@color/black_light"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/second_word_title" />

                        <TextView
                            android:id="@+id/second_word_meaning_vietnamese"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/afacad_medium_italic"
                            android:text="Định nghĩa tiếng việt"
                            android:textColor="@color/black_light"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/second_word_meaning_english" />

                        <TextView
                            android:id="@+id/second_example_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/afacad_bold"
                            android:layout_marginTop="10dp"

                            android:gravity="center"
                            android:text="Ví dụ:"
                            android:textColor="@color/main_color_purple_dark"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/second_word_meaning_vietnamese" />

                        <TextView
                            android:id="@+id/second_example_meaning_english"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"

                            android:fontFamily="@font/afacad_medium"
                            android:text="Ví dụ tiếng anh"
                            android:textColor="@color/black_light"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/second_example_title" />

                        <TextView
                            android:id="@+id/second_example_meaning_vietnamese"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="7dp"

                            android:fontFamily="@font/afacad_medium_italic"
                            android:text="Ví dụ tiếng việt"
                            android:textColor="@color/black_light"
                            android:textSize="15sp"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/second_example_meaning_english" />

                        <ImageView
                            android:id="@+id/imageQuestion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/background9"

                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="10dp"

                            app:layout_constraintHeight_max="300dp"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/second_example_meaning_vietnamese" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--  ===============================================  -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/font_card"


        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="310dp"
            android:layout_height="600dp"

            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"

                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toBottomOf="@+id/front_icon_mark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/front_icon_mark"

                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false"

                    >

                    <TextView
                        android:id="@+id/front_currentPage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/afacad_bold"

                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/main_color_purple"
                        android:textSize="22sp"

                        app:layout_constraintStart_toStartOf="parent"

                        android:clickable="false"
                        android:focusable="false"
                        android:longClickable="false"

                        />

                    <TextView
                        android:id="@+id/front_spe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/afacad_bold"
                        android:layout_marginStart="1dp"

                        android:gravity="center"
                        android:text="/"
                        android:textColor="@color/main_color_purple"
                        android:textSize="22sp"

                        app:layout_constraintStart_toEndOf="@+id/front_currentPage"

                        android:clickable="false"
                        android:focusable="false"
                        android:longClickable="false"
                        />

                    <TextView
                        android:id="@+id/front_fullPage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/afacad_bold"
                        android:layout_marginStart="1dp"

                        android:gravity="center"
                        android:text="36"
                        android:textColor="@color/main_color_purple"
                        android:textSize="22sp"

                        app:layout_constraintStart_toEndOf="@+id/front_spe"

                        android:clickable="false"
                        android:focusable="false"
                        android:longClickable="false"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/front_word_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"

                    android:text="Determine"
                    android:textSize="35sp"
                    android:fontFamily="@font/afacad_bold"
                    android:textColor="@color/black_light"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false"
                    />


                <TextView
                    android:id="@+id/front_pronunciation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="/di'te:min/"
                    android:textSize="20sp"
                    android:fontFamily="@font/afacad_medium"
                    android:textColor="@color/dark_grey"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/front_word_text"

                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false"
                    />

                <ImageView
                    android:id="@+id/front_icon_mark"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_assets_star_uncheck"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false"
                    />

                <ImageView
                    android:id="@+id/front_icon_loud"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_asset_loud1"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>