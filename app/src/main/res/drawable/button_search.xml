<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#20FFFFFF">

    <!-- Bo góc + màu nền gốc -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/main_color_purple_dark" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Đảm bảo ripple theo bo góc -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Mask cần có màu -->
            <corners android:radius="0dp" />
        </shape>
    </item>
</ripple>
