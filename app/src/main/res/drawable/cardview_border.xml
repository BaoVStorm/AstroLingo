<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền trắng (hoặc bất kỳ màu nào bạn muốn) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background của CardView -->
        </shape>
    </item>

    <!-- Viền dưới bên phải màu đỏ -->
    <item android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#FF0000" /> <!-- Viền màu đỏ -->
        </shape>
    </item>
</layer-list>